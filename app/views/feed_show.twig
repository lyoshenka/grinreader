{% extends "layout.twig" %}
{% block content %}
  <h2><a href="{{ feed.url }}">{{ feed.name }}</a></h2>
  {% for article in feed.articlesByDate %}
    <article data-id="{{ article._id }}">
      <div class="meta pull-right muted">
        {{ article.date | date('F j, Y g:iA') }}
      </div>
      <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
      <div class="row-fluid">
        <div class="span8">
          {{ article.body }}
        </div>
      </div>
      <a class="js-mark-read" href="javascript:;">Mark Read</a>
    </article>
    {% if not loop.last %}<hr>{% endif %}
  {% endfor %}
{% endblock %}